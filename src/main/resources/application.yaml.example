spring:
  application:
    name: payment-gateway-cip

  flyway:
    enabled: true
    baseline-on-migrate: true
    locations: classpath:db/migration

  jpa:
    hibernate:
      ddl-auto: none
    show-sql: true

  security:
    oauth2:
      resourceserver:
        jwt:
          issuer-uri: ${ISSUER_URI:http://localhost:8443/realms/oauth2-api-gateway}

external:
  corebank:
    name: corebank
    url: http://core-banking:8081
    path: /api/corebank
  
  biller:
    name: biller
    url: http://biller:8082
    path: /api/biller

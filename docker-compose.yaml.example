services:
  payment-gateway-db:
    image: postgres:latest
    container_name: payment-gateway-db
    environment:
      POSTGRES_USER: admin_user
      POSTGRES_PASSWORD: secret123
      POSTGRES_DB: db
    ports:
      - "5432:5432"
    volumes:
      - ./db_volumes/payment-gateway-db:/var/lib/postgresql
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U admin_user -d db"]
      interval: 5s
      timeout: 5s
      retries: 5
    networks:
      - payment-gateway-cip

  keycloak:
    image: quay.io/keycloak/keycloak:26.4.2
    container_name: keycloak
    command:
      - start-dev
      - --http-port=8443
    environment:
      KC_BOOTSTRAP_ADMIN_USERNAME: admin
      KC_BOOTSTRAP_ADMIN_PASSWORD: admin
    ports:
      - "8443:8443"
    volumes:
      - ./keycloak_volumes:/opt/keycloak/data
    networks:
      - payment-gateway-cip

  payment-gateway-cip: 
    build: . 
    container_name: payment-gateway-cip
    environment: 
      SPRING_DATASOURCE_URL: jdbc:postgresql://payment-gateway-db:5432/db
      SPRING_DATASOURCE_USERNAME: admin_user
      SPRING_DATASOURCE_PASSWORD: secret123
      ISSUER_URI: http://keycloak:8443/realms/oauth2-api-gateway
    ports: 
      - "8080:8080"
    depends_on: 
      payment-gateway-db:
        condition: service_healthy
      keycloak:
        condition: service_started
    networks: 
      - payment-gateway-cip

networks:
  payment-gateway-cip:
    external: true